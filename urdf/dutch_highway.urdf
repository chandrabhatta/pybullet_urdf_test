<?xml version="1.0"?>
<robot name="dutch_highway">

  <!-- ==================== MATERIALS ==================== -->
  <material name="asphalt">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>

  <material name="white_line">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <!-- ==================== WORLD BASE ==================== -->
  <link name="world"/>

  <!-- ==================== ROAD SURFACE ==================== -->
  <!-- 2 lanes x 3.5m = 7m total width -->
  <!-- Centered at Y = 3.5m -->
  <link name="road_surface">
    <visual>
      <origin xyz="150 3.5 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="300 7.0 0.05"/>
      </geometry>
      <material name="asphalt"/>
    </visual>
    <collision>
      <origin xyz="150 3.5 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="300 7.0 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0"/>
      <inertia ixx="1" iyy="1" izz="1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="road_surface_joint" type="fixed">
    <parent link="world"/>
    <child link="road_surface"/>
  </joint>

  <!-- ==================== OUTER EDGE LINE (at Y=7.0) ==================== -->
  <link name="edge_line_outer">
    <visual>
      <origin xyz="150 7.0 0.051" rpy="0 0 0"/>
      <geometry>
        <box size="300 0.15 0.01"/>
      </geometry>
      <material name="white_line"/>
    </visual>
  </link>

  <joint name="edge_line_outer_joint" type="fixed">
    <parent link="world"/>
    <child link="edge_line_outer"/>
  </joint>

  <!-- ==================== INNER EDGE LINE (at Y=0) ==================== -->
  <link name="edge_line_inner">
    <visual>
      <origin xyz="150 0 0.051" rpy="0 0 0"/>
      <geometry>
        <box size="300 0.15 0.01"/>
      </geometry>
      <material name="white_line"/>
    </visual>
  </link>

  <joint name="edge_line_inner_joint" type="fixed">
    <parent link="world"/>
    <child link="edge_line_inner"/>
  </joint>

  <!-- ==================== DASHED LANE DIVIDER (at Y=3.5) ==================== -->
  <!-- Dutch standard: 3m dash, 9m gap = 12m pattern -->

