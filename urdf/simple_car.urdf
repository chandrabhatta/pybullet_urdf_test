<?xml version="1.0"?>
<robot name="simple_car">

  <!-- ==================== BODY ==================== -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.2"/>
      <geometry><box size="3.0 1.6 0.4"/></geometry>
      <material name="car_blue">
        <color rgba="0.0 0.3 1.0 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.2"/>
      <geometry><box size="3.0 1.6 0.4"/></geometry>
    </collision>

    <inertial>
      <mass value="100"/>
      <origin xyz="0 0 0.2"/>
      <inertia ixx="10" iyy="10" izz="10"/>
    </inertial>
  </link>


  <!-- ==================== BLACK WHEEL MATERIAL ==================== -->
  <material name="wheel_black">
    <color rgba="0.05 0.05 0.05 1.0"/>
  </material>


  <!-- ==================== FRONT LEFT WHEEL ==================== -->
  <link name="wheel_fl">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.25" length="0.1"/></geometry>
      <material name="wheel_black"/>
    </visual>
  </link>

  <joint name="steer_fl" type="revolute">
    <parent link="base_link"/>
    <child link="wheel_fl"/>
    <origin xyz="1.2 0.8 0.1"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.6" upper="0.6"/>
  </joint>


  <!-- ==================== FRONT RIGHT WHEEL ==================== -->
  <link name="wheel_fr">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.25" length="0.1"/></geometry>
      <material name="wheel_black"/>
    </visual>
  </link>

  <joint name="steer_fr" type="revolute">
    <parent link="base_link"/>
    <child link="wheel_fr"/>
    <origin xyz="1.2 -0.8 0.1"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.6" upper="0.6"/>
  </joint>


  <!-- ==================== REAR LEFT WHEEL ==================== -->
  <link name="wheel_rl">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.25" length="0.1"/></geometry>
      <material name="wheel_black"/>
    </visual>
  </link>

  <joint name="wheel_rl_joint" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_rl"/>
    <origin xyz="-1.2 0.8 0.1"/>
  </joint>


  <!-- ==================== REAR RIGHT WHEEL ==================== -->
  <link name="wheel_rr">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.25" length="0.1"/></geometry>
      <material name="wheel_black"/>
    </visual>
  </link>

  <joint name="wheel_rr_joint" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_rr"/>
    <origin xyz="-1.2 -0.8 0.1"/>
  </joint>



  <!-- ========================================================= -->
  <!-- ==================== HITCH BAR ================= -->
  <!-- ========================================================= -->

  <link name="hitch_link">
    <visual>
      <origin xyz="-0.6 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.6"/>
      </geometry>
      <material name="hitch_gray">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Hitch bar fixed to car -->
  <joint name="hitch_connect" type="fixed">
    <parent link="base_link"/>
    <child link="hitch_link"/>
    <origin xyz="-2.0 0 0.2"/>
  </joint>



  <!-- ========================================================= -->
  <!-- ==================== TRAILER SECTION ===================== -->
  <!-- ========================================================= -->

  <!-- ==================== TRAILER BASE ==================== -->
  <link name="trailer_base">
    <visual>
      <origin xyz="0 0 0.1"/>
      <geometry><box size="2.0 1.4 0.4"/></geometry>
      <material name="trailer_red">
        <color rgba="0.9 0.1 0.1 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.1"/>
      <geometry><box size="2.0 1.4 0.4"/></geometry>
    </collision>

    <inertial>
      <mass value="80"/>
      <origin xyz="0 0 0.1"/>
      <inertia ixx="8" iyy="8" izz="8"/>
    </inertial>
  </link>

  <!-- Trailer hinge at end of hitch bar -->
  <joint name="trailer_hinge" type="revolute">
    <parent link="hitch_link"/>
    <child link="trailer_base"/>
    <origin xyz="-0.6 0 0"/>  <!-- matches hitch length -->
    <axis xyz="0 0 1"/>
    <limit lower="-1.0" upper="1.0"/>
  </joint>


  <!-- ==================== TRAILER LEFT WHEEL ==================== -->
  <link name="trailer_wheel_l">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.25" length="0.1"/></geometry>
      <material name="wheel_black"/>
    </visual>
  </link>

  <joint name="trailer_wheel_l_joint" type="fixed">
    <parent link="trailer_base"/>
    <child link="trailer_wheel_l"/>
    <origin xyz="-0.9 0.8 0.0"/>
  </joint>


  <!-- ==================== TRAILER RIGHT WHEEL ==================== -->
  <link name="trailer_wheel_r">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.25" length="0.1"/></geometry>
      <material name="wheel_black"/>
    </visual>
  </link>

  <joint name="trailer_wheel_r_joint" type="fixed">
    <parent link="trailer_base"/>
    <child link="trailer_wheel_r"/>
    <origin xyz="-0.9 -0.8 0.0"/>
  </joint>


  <!-- ==================== LOAD INSIDE TRAILER ==================== -->
  <link name="trailer_load">
    <visual>
      <origin xyz="0 0 0.25"/>
      <geometry><box size="1.0 0.8 0.4"/></geometry>
      <material name="trailer_red"/>
    </visual>
  </link>

  <joint name="trailer_load_fixed" type="fixed">
    <parent link="trailer_base"/>
    <child link="trailer_load"/>
    <origin xyz="0 0 0"/>
  </joint>


</robot>
