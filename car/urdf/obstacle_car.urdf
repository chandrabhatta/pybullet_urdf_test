<?xml version="1.0"?>
<robot name="simple_car">

  <!-- ==================== BODY ==================== -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.2"/>
      <geometry><box size="3.0 1.6 0.4"/></geometry>
      <material name="car_blue">
        <color rgba="0.0 0.3 1.0 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.2"/>
      <geometry><box size="3.0 1.6 0.4"/></geometry>
    </collision>

    <inertial>
      <mass value="100"/>
      <origin xyz="0 0 0.2"/>
      <inertia ixx="10" iyy="10" izz="10"/>
    </inertial>
  </link>


  <!-- ==================== BLACK WHEEL MATERIAL ==================== -->
  <material name="wheel_black">
    <color rgba="0.05 0.05 0.05 1.0"/>
  </material>


  <!-- ==================== FRONT LEFT WHEEL ==================== -->
  <link name="wheel_fl">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.25" length="0.1"/></geometry>
      <material name="wheel_black"/>
    </visual>
  </link>

  <joint name="steer_fl" type="revolute">
    <parent link="base_link"/>
    <child link="wheel_fl"/>
    <origin xyz="1.2 0.8 0.1"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.6" upper="0.6"/>
  </joint>


  <!-- ==================== FRONT RIGHT WHEEL ==================== -->
  <link name="wheel_fr">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.25" length="0.1"/></geometry>
      <material name="wheel_black"/>
    </visual>
  </link>

  <joint name="steer_fr" type="revolute">
    <parent link="base_link"/>
    <child link="wheel_fr"/>
    <origin xyz="1.2 -0.8 0.1"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.6" upper="0.6"/>
  </joint>


  <!-- ==================== REAR LEFT WHEEL ==================== -->
  <link name="wheel_rl">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.25" length="0.1"/></geometry>
      <material name="wheel_black"/>
    </visual>
  </link>

  <joint name="wheel_rl_joint" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_rl"/>
    <origin xyz="-1.2 0.8 0.1"/>
  </joint>


  <!-- ==================== REAR RIGHT WHEEL ==================== -->
  <link name="wheel_rr">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.25" length="0.1"/></geometry>
      <material name="wheel_black"/>
    </visual>
  </link>

  <joint name="wheel_rr_joint" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_rr"/>
    <origin xyz="-1.2 -0.8 0.1"/>
  </joint>

</robot>
